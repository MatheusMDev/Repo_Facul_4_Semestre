@model Cliente

@{
    Layout = "_LayoutCliente";
}

<form asp-controller="Cliente" asp-action="Update" method="POST">
    <h2>Cadastrar Cliente</h2>
    <br />
    <div class="form-group">
        <label> Nome </label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label>Senha</label>
        <input asp-for="Senha" class="form-control" />
        <span asp-validation-for="Senha"></span>
    </div>

    <div class="form-group">
        <label>Arquivo Imagem</label>
        <input asp-for="Foto" class="form-control" />
        <span asp-validation-for="Foto"></span>
    </div>

    <div class="form-group">
        <label>Situação do Produto [1 - Ativo, 2 - Inativo]</label>
        <input asp-for="statusCli" class="form-control" />
        <span asp-validation-for="statusCli"></span>
    </div>


    <button class="button">Salvar</button>
</form>